<div class="row">
    <%= form_with model: @article, local: true, html: { multipart: true } do |form| %>
        <% if @article.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@article.errors.count, "error") %> prohibited
              this article from being saved:
            </h2>
            <ul>
              <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="col-md-8 order-md-1">

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= form.label :title %><br>
              <%= form.text_field :title, class:"form-control", id:"firstName", placeholder:"", value:"", required:true %>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.label :text %><br>
              <%= form.text_area :text %>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.file_field :avatar %>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.file_field :avatar %>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.file_field :avatar %>
            </div>

            <%= form.submit "Create post", class:"btn btn-primary btn-lg btn-block" %>

          </div>

        </div>
    <% end %>
</div>
